<Window x:Class="Extinction_Rebellion.DateInspector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Extinction_Rebellion"
        mc:Ignorable="d"
        Title="DateInspector" Height="514.948" Width="636.81">
	<Grid>
		<ListView Name="EventList" Margin="0">
			<ListView.View>
				<GridView AllowsColumnReorder="True">

					<GridViewColumn DisplayMemberBinding="{Binding Time}" Header="Time" Width="Auto"/>

					<GridViewColumn DisplayMemberBinding="{Binding Group}" Header="Group" Width="Auto"/>

					<GridViewColumn DisplayMemberBinding="{Binding Description}" Header="Description" Width="Auto"/>

				</GridView>
			</ListView.View>
		</ListView>

	</Grid>
</Window>
